      "minLength": 1,
      "metadata": {
        "description": "Azure Maps real time position tracking demo project."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The location to use for all deployments."
      }
    },
    "utcValue": {
      "type": "string",
